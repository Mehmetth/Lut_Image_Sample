<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:background="#BBC3CE">

        <ImageView
            android:id="@+id/photoicon_imageview"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/photos_icon"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lütfen filtreleme yapmak istediğiniz resmi çekiniz veya galerinizden seçiniz"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_below="@+id/photoicon_imageview"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/selectcamera_textview"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:background="@android:color/holo_blue_light"
        android:text="Kamerayı Kullan"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:elevation="20dp"/>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="--------   or   --------"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/select_galery_textview"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Galeriden resim seçin"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:elevation="20dp"
            android:background="@android:color/darker_gray"/>


    </RelativeLayout>

</RelativeLayout>